{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },

  "plugins": [
    'react',
    'jsx-a11y',
    'import',
  ],

  "rules": {
    "global-require": 0,
    "no-restricted-globals": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-tabs": 0,
    "indent": 0,
    "no-use-before-define": [2, "nofunc"],
    "valid-jsdoc": 0,
    "require-jsdoc": 0,

    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,

    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "react/no-danger": 0,

    "jsx-a11y/anchor-is-valid": 0,

    "no-mixed-operators": 0,
  },

  "globals": {
    "graphql": true,
    "module": true,
    "require": true,
    "__dirname": true,
  }
}
